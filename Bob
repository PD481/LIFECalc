// Use inheritance to inherit properties from the person class to  Bob class
public class Bob extends Person {
    private static java.util.Date dateLifeExpectancyCalculate;
    private String [] bobChildren = {"Edward ","James ", "Bob Jr ", "Savannah ","Linda"};


    public Bob(  int age, int packOfCigaretteSmokePerDay,int yearOfEducation,double familyHistoryOfBreastCancer,int bottlesOfAlcoholConsumedPerDay, int hoursOfSleepPerDay) {

        super(age, yearOfEducation, bottlesOfAlcoholConsumedPerDay, familyHistoryOfBreastCancer, packOfCigaretteSmokePerDay, hoursOfSleepPerDay);
        dateLifeExpectancyCalculate = new java.util.Date();
        System.out.println("Below are the name of Bob's Children ");
        PrintBobChildren(bobChildren);

    }
    // Method print name
    public  String[] getBobChildren(){
        return bobChildren;
    }
    public void PrintBobChildren(String [] bobChildren){
        for(int i =0;i<bobChildren.length; i++){
            System.out.println(bobChildren[i]+ "");
        }
    }
    // Use of the java Date method to print the current day
    public static java.util.Date getDateLifeExpectancyCalculate(){
        return  dateLifeExpectancyCalculate;

    }





}
