        int number2 = 17+(int)(Math.random()*25);
        System.out.println("The random number is  "+ number);

        // The use of the switch statement print the health history of  Bob's Family
        switch (number){
            case 1:  System.out.print("Bob's son Edward  age "+ number2+ "  who  does not drink or smoke");
                break;
            case 2:  System.out.print("Bob's son James  age " + number2 + " the Alcoholic who is diagnosed with lever cancer");
