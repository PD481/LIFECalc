        int yearOfEducation = input.nextInt();
        System.out.println("Enter the percent of the person family that have breast cancer between 1% to 90%");
        double familyHistoryOfBreastCancer = input.nextDouble();
        System.out.println("Enter the quantities of Alcohol consume between 1 bottle to 10 Bottles");
        int bottlesOfAlcoholConsumedPerDay = input.nextInt();
        System.out.println("Enter  hours of sleep per day between 1 hour to 10 hours");
        int hoursOfSleepPerDay = input.nextInt();
        System.out.println("     ");




        // Create the object  to call the  method

        Bob myBob  = new Bob( age,  packOfCigaretteSmokePerDay, yearOfEducation, familyHistoryOfBreastCancer, bottlesOfAlcoholConsumedPerDay, hoursOfSleepPerDay);

        myBob.setAge(age);
        myBob.setHoursOfSleepPerDay(hoursOfSleepPerDay);
        myBob.setFamilyHistoryOfCancer(familyHistoryOfBreastCancer);
        myBob.setBottlesOfAlcoholConsumedPerDay(bottlesOfAlcoholConsumedPerDay);
